{
  "globalLayers": [
    "logger",
    "cors"
  ],
  "routes": [
    {
      "path": "/api/v1/products",
      "method": "GET",
      "target": "http://localhost:8082/products",
      "headers": {
        "X-Service": "products"
      }
    },
    {
      "path": "/api/v1/products/:id",
      "method": "GET",
      "target": "http://localhost:8082/products/:id",
      "headers": {
        "X-Service": "products"
      }
    },
    {
      "path": "/api/v1/products",
      "method": "POST",
      "target": "http://localhost:8082/products",
      "headers": {
        "X-Service": "products"
      }
    },
    {
      "path": "/api/v1/users",
      "method": "GET",
      "target": "http://localhost:8081/users"
    },
    {
      "path": "/api/v1/users/:id",
      "method": "GET",
      "target": "http://localhost:8081/users/:id"
    },
    {
      "path": "/api/v1/users",
      "method": "POST",
      "target": "http://localhost:8081/users",
      "headers": {
        "X-Service": "users"
      }
    },
    {
      "path": "/api/v1/users/:id",
      "method": "PUT",
      "target": "http://localhost:8081/users/:id"
    },
    {
      "path": "/api/v1/users/:id",
      "method": "DELETE",
      "target": "http://localhost:8081/users/:id"
    }
  ]
}